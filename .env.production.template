# ============================================================================
# Production Environment Variables Template
# ============================================================================
# Copy this file to .env on production server and fill in actual values
# Location on server: /var/www/bedagang/.env
# ============================================================================

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://bedagang_user:YOUR_DB_PASSWORD@localhost:5432/bedagang_production
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bedagang_production
DB_USER=bedagang_user
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NODE_ENV=production
PORT=3000
APP_URL=http://103.253.212.64:3000

# ============================================================================
# NEXTAUTH CONFIGURATION
# ============================================================================
# Generate secret: openssl rand -base64 32
NEXTAUTH_URL=http://103.253.212.64:3000
NEXTAUTH_SECRET=YOUR_NEXTAUTH_SECRET_HERE_GENERATE_WITH_OPENSSL

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
# Generate secret: openssl rand -base64 32
SESSION_SECRET=YOUR_SESSION_SECRET_HERE_GENERATE_WITH_OPENSSL

# ============================================================================
# SECURITY
# ============================================================================
# JWT Secret for API authentication
JWT_SECRET=YOUR_JWT_SECRET_HERE

# Encryption key for sensitive data
ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY_HERE

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@bedagang.com

# ============================================================================
# PAYMENT GATEWAY (Optional)
# ============================================================================
# Midtrans
MIDTRANS_SERVER_KEY=YOUR_MIDTRANS_SERVER_KEY
MIDTRANS_CLIENT_KEY=YOUR_MIDTRANS_CLIENT_KEY
MIDTRANS_IS_PRODUCTION=true

# ============================================================================
# STORAGE CONFIGURATION (Optional)
# ============================================================================
# AWS S3 or compatible storage
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=ap-southeast-1
AWS_BUCKET_NAME=bedagang-production

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_FILE=/var/log/bedagang/app.log

# ============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# MONITORING (Optional)
# ============================================================================
# Sentry for error tracking
SENTRY_DSN=

# Google Analytics
GA_TRACKING_ID=

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_DIR=/var/backups/bedagang
BACKUP_RETENTION_DAYS=30

# ============================================================================
# NOTES:
# ============================================================================
# 1. Never commit this file with actual values to git
# 2. Keep this file secure with proper permissions: chmod 600 .env
# 3. Generate strong random secrets using: openssl rand -base64 32
# 4. Update all YOUR_*_HERE placeholders with actual values
# 5. Restart application after changing values: pm2 restart bedagang
# ============================================================================
