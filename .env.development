# BEDAGANG - Development Environment Configuration

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgresql://postgres:jakarta123@localhost:5432/bedagang_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bedagang_dev
DB_USER=postgres
DB_PASSWORD=jakarta123
DB_DIALECT=postgres

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
NODE_ENV=development
PORT=3000
APP_NAME=BEDAGANG
APP_URL=http://localhost:3000

# ==========================================
# NEXTAUTH CONFIGURATION
# ==========================================
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=bedagang-dev-secret-key-change-in-production

# ==========================================
# SESSION CONFIGURATION
# ==========================================
SESSION_SECRET=bedagang-session-secret-key
JWT_SECRET=bedagang-jwt-secret-key

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_LOYALTY_PROGRAM=true
ENABLE_MULTI_BRANCH=true
ENABLE_ONLINE_ORDERING=false
ENABLE_DELIVERY_TRACKING=false

# ==========================================
# BUSINESS SETTINGS
# ==========================================
DEFAULT_CURRENCY=IDR
DEFAULT_TIMEZONE=Asia/Jakarta
DEFAULT_LANGUAGE=id

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
