# BEDAGANG - Retail Platform Environment Variables

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgresql://user:password@localhost:5432/bedagang_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bedagang_dev
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_DIALECT=postgres

# PostgreSQL Configuration (for Finance Settings & Modern Features)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bedagang
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
NODE_ENV=development
PORT=3000
APP_NAME=BEDAGANG
APP_URL=http://localhost:3000

# ==========================================
# NEXTAUTH CONFIGURATION
# ==========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this-in-production

# ==========================================
# SESSION CONFIGURATION
# ==========================================
SESSION_SECRET=your-session-secret-key-change-this
JWT_SECRET=your-jwt-secret-key-change-this

# ==========================================
# PAYMENT GATEWAY (Optional)
# ==========================================
# Midtrans
MIDTRANS_SERVER_KEY=
MIDTRANS_CLIENT_KEY=
MIDTRANS_IS_PRODUCTION=false

# Xendit
XENDIT_SECRET_KEY=
XENDIT_PUBLIC_KEY=

# ==========================================
# EMAIL CONFIGURATION (Optional)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@bedagang.com

# ==========================================
# SMS GATEWAY (Optional)
# ==========================================
SMS_API_KEY=
SMS_SENDER_ID=BEDAGANG

# ==========================================
# CLOUD STORAGE (Optional)
# ==========================================
# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-southeast-1
AWS_BUCKET_NAME=

# Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ==========================================
# ANALYTICS (Optional)
# ==========================================
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# ==========================================
# FEATURE FLAGS
# ==========================================
ENABLE_LOYALTY_PROGRAM=true
ENABLE_MULTI_BRANCH=true
ENABLE_ONLINE_ORDERING=false
ENABLE_DELIVERY_TRACKING=false

# ==========================================
# BUSINESS SETTINGS
# ==========================================
DEFAULT_CURRENCY=IDR
DEFAULT_TIMEZONE=Asia/Jakarta
DEFAULT_LANGUAGE=id

# ==========================================
# SECURITY
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
